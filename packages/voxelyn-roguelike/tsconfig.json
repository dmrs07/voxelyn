{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@voxelyn/core": ["../voxelyn-core/src/index.ts"],
      "@voxelyn/core/*": ["../voxelyn-core/src/*"]
    }
  },
  "include": ["src/**/*"]
}
