{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["svelte"],
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "@voxelyn/ai": ["../voxelyn-ai/src/index.ts"],
      "@voxelyn/ai/*": ["../voxelyn-ai/src/*"],
      "@voxelyn/core": ["../voxelyn-core/src/index.ts"],
      "@voxelyn/core/*": ["../voxelyn-core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
